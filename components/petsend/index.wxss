.container {
  width: 100%;
  height: 160rpx;
  padding: 16rpx 0rpx;
  display: flex;
  flex-direction: row;
}

.petimg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.description {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  position: relative;
  flex: 1;
}

.age {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(131, 145, 168, 1);
}

.tips {
  width: 76rpx;
  height: 38rpx;
  text-align: center;
  margin-top: 30rpx;
  line-height: 38rpx;
  background: rgba(90, 175, 224, 0.1);
  border-radius: 8rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(90, 175, 224, 1);
}

.name {
  display: flex;
  padding-top: 5rpx;
  margin-bottom: 3rpx;
  align-items: center;
  margin-top: -5rpx;
}

.nametitle {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 62, 82, 1);
  max-width: 203rpx;
}

.name image {
  width: 20rpx;
  height: 21rpx;
  margin-left: 8rpx;
}

.author {
  font-size: 20rpx;
  color: #999;
  margin-top: -5rpx;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot {
  /* margin-top:3rpx; */
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.footer {
  color: #666;
}

.moretip {
  display: flex;
  justify-content: space-between;
  line-height: 45rpx;
}

.area {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(186, 196, 209, 1);
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}

.view {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(186, 196, 209, 1);
  line-height: 54rpx;
  margin-right: 12rpx;
  position: absolute;
  bottom: 18rpx;
  right: 30rpx;
}

.area image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  vertical-align: -3rpx;
}

.phone  image {
  width: 20rpx;
  height: 21rpx;
  margin-right: 8rpx;

}

.btn-class {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
}

.phone {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(131, 145, 168, 1);
}
.peopledetail{
display: flex;
flex-direction: column;
margin-right:60rpx;
}
.weixing image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
