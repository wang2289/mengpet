.container {
  margin-top: 30rpx;
  display: flex;
  position: relative;
  flex-direction: column;
  width: 337rpx;
  height: 504rpx;
  box-shadow:0px 16px 32px 0px rgba(79,99,130,0.1);
  border-radius: 15rpx;
}

.petimg {
  width: 337rpx;
  height: 337rpx;
   border-radius: 15rpx 15rpx 0rpx 0rpx;
}

.description {
  padding: 6rpx 12rpx 14rpx 12rpx;
  background-color: #fff;
  width: 313rpx;
  height: 92rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
}

.descriptions {
  background-color: #fff;
  width: 100%;
  height: 54rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
  border-top: 1px solid #e6eaef;
  border-radius: 0rpx 0rpx 15rpx 15rpx;
}

.age {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(131, 145, 168, 1);
}

.tips {
  width: 76rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  background: rgba(90, 175, 224, 0.1);
  border-radius: 6px;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(90, 175, 224, 1);
}

.name {
  display: flex;
  padding-top: 5rpx;
  margin-bottom: 3rpx;
  align-items: center;
}
.nametitle{
  flex: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  line-height:40rpx;
}
.name image{
  width: 20rpx;
  height: 21rpx;
  margin-left: 8rpx;
  
}
.author {
  font-size: 20rpx;
  color: #999;
  margin-top: -5rpx;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot {
  /* margin-top:3rpx; */
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.footer {
  color: #666;
}

.moretip {
  display: flex;
  justify-content: space-between;
  line-height: 45rpx;
}

.area {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(186, 196, 209, 1);
  line-height: 54rpx;
  margin-left:12rpx ;
}

.view {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(186, 196, 209, 1);
  line-height: 54rpx;
  margin-right:12rpx ;
}

.view image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  vertical-align: -3rpx
}

.line {
  width: 690rpx;
  margin: auto;
  height: 1rpx;margin-top: 1rpx;
  margin-bottom: 1rpx;
  background: #E6EAEF;
  transform: rotateZ(360deg);
}
