page {
  background-color: #F8F9F9;
}
.container {
  width: 100%;
  height: 100%;
  position: relative; 
}

.receiveApplyList {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.app {
  margin-top: 30rpx;
  background-color: #fff;
  width: 90%;
  height: 300rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow:0px 16px 32px 0px rgba(79,99,130,0.1);
  border-radius: 15rpx;
}

.petimg {
  margin-left: 28rpx;
  margin-top: 10rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 15rpx 15rpx 15rpx 15rpx;
}

.head {
  margin-top: 2rpx;
  width: 100%;
  height: 200rpx;
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
}

.answers {
  margin-left: 30rpx;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  color: #A3AEC0;
}

.foot {
  width: 90%;
  margin-top: 15rpx;
  /* margin-left: 30rpx; */
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #1E1616;
}

/* .footCenter {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
} */

.footfont {
  color: #1E1616;
}

.apptime {
  color: #A3AEC0;
}

.petname {
  width: 50%;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  border-radius: 15px;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: white;
}

.username {
  margin-top: 10rpx;
  height: 38rpx;
  line-height: 38rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 500;
  color: black;
}

.boy {
  background: #1399CD;
}

.girl {
  background: #EE5578;
}

.boyfont {
  color: #1399CD;
}

.girlfont {
  color: #EE5578;
}

.line {
  margin: auto;
  height: 1rpx;
  width: 90%;
  margin-top: 1rpx;
  margin-bottom: 1rpx;
  background: #E6EAEF;
  transform: rotateZ(360deg);
}

.moretip {
  display: flex;
  justify-content: space-between;
  line-height: 45rpx;
}

.area {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(186, 196, 209, 1);
  line-height: 54rpx;
  margin-left:12rpx ;
}

.score {
  margin-left: 40rpx;
  margin-top: 80rpx;
  font-size: 50rpx;
  color: red;
  text-align: center;
}

text {
  font-size: 12px !important;
}

