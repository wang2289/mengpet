<view class='container'>
<view wx:if="{{!searchPanel}}" class="container">
   <view class="header">
    <view class='city' bind:tap="onCitySearch">上海 <image src="/img/ling/right - anticon.png" /></view>
    <view class='box' bind:tap="onActivateSearch">
      <image src="/img/ling/serch.png" />
      <text>搜索</text>
    </view> 
  </view> 
  <view class='sw-con'>
   <swiper
  indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}"
  interval="{{interval}}"
  duration="{{duration}}"
  circular="true"
  next-margin="60rpx"
>
  <block wx:for="{{imgUrls}}" wx:key="{{id}}">
    <swiper-item>
      <image src="{{item.url}}" class="slide-image" width="660" height="330" />
    </swiper-item>
  </block>
</swiper>
</view>

<view class='sub-title'>带我回家</view>
<view class=''  bind:tap="onPetSearch">
  <choise-cmp  class='choise' />
</view>

<view class="sub-container">
    <view class="animal-container">
      <block wx:for="{{pets}}" wx:key="{{id}}">
        <pet-cmp pet="{{item}}" class="pets" />
      </block>
    </view>
  </view> 
</view>
<search-cmp more="{{more}}" wx:if="{{searchPanel}}" bind:cancel="onCancel" />  
</view>

<view class='meng'  hidden='{{isshow}}'>
  <view class='mengbox'>
    <view class='mengtitle'>请点击授权</view>
    <view class='mengbom'>
     <aut-btn-cmp  open-type="getUserInfo" class="avatar-position" bind:getuserinfo="onGetUserInfo">
    <view slot="img" class='sub'>确定</view>
  </aut-btn-cmp>
    </view>
  </view>
</view>
